{{#if updateQuestionForm}}
<h4>Update this question:</h4>
  <form>
    <div class="form-group">
        <label for="text">Question:</label>
        {{input value=text id="text" class="form-control" placeholder=question.text}}
      </div>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author" class="form-control" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="notes">Notes:</label>
        {{textarea value=notes id="notes" class="form-control" placeholder=question.notes}}
      </div>

      <button {{action 'update' post}}>Update</button>
  </form>
{{else}}
  <button class="btn btn-primary" {{action 'showUpdateQuestionForm'}}>Update</button>
{{/if}}
