{{#if addNewAnswer}}
  <form>
    <div class="form-group">
        <label for="author">Your name:</label>
        {{input value=author id="author" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="text">Your answer:</label>
        {{input type="text" value=text class="form-control"}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
{{else}}
<button {{action 'showNewAnswerForm'}} class="btn btn-success">Answer this Question!</button>
{{/if}}
