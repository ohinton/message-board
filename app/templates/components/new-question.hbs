{{#if addNewQuestion}}
  <form>
    <div class="form-group">
        <label for="text">What's your question?</label>
        {{input value=text id="text" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="author">Your name:</label>
        {{input value=author id="author" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="notes">Additional notes:</label>
        {{textarea value=notes id="notes" class="form-control"}}
      </div>

      <button class="btn btn-primary" {{action 'save'}}>Save</button>
  </form>
{{else}}
  <button class="btn btn-primary" {{action 'showNewQuestionForm'}}>Submit A Question!</button>
{{/if}}
